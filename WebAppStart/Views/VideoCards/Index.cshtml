@model IEnumerable<WebAppStart.Models.VideoCard>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
  <head>
    <title>Main Page</title>
    <link ref="stylesheet" href="~css\StyleSheetHome.css" type="text/css" />
  </head>
  <body>
<div class="main" >
        <div class="col-1-3">
            <div class="Filter">

            <a class="BtnFilter" asp-area="" asp-controller="Home" asp-action="Index">
                <h4 class="text-white">
                Сбросить фильтры!
                </h4>

            </a>
            </div>

    </div>
    <div class= "row">
        <div class= "col-1-2">
            <form asp-controller="VideoCards" asp-action="Index" method="get" >
    <p>
        <input class="SearchinString" type="text" name="SearchString" />
        <input class="SearchinSub" type="submit" value="Поиск" />
    </p>
            </form>
  <div class="list-group">
      @foreach (var item in Model)
      {
  <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
    <img src="@Html.DisplayFor(x=>item.Image)" alt="twbs" width="64" height="64" class="rounded-circle flex-shrink-0">
    <div class="d-flex gap-2 w-100 justify-content-between">
      <div>
        <h6 class="mb-0">@Html.DisplayFor(x=>item.NameCard)</h6>
        <p class="mb-0 opacity-75">@Html.DisplayFor(x=>item.Price)</p>
      </div>
      <small class="opacity-50 text-nowrap">now</small>
    </div>
  </a>
  }
</div>
</div>
        </div>
    </div>
  </body>
</html>
